---
import Reviews from '@src/components/Reviews'
import type { AvailableLanguage } from '@src/i18n/i18n'
import NoLayout from '@src/layouts/NoLayout.astro'

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'th' } }]
}

const { lang } = Astro.params
---

<NoLayout>
  <Reviews client:only lang={lang as AvailableLanguage} />
</NoLayout>
